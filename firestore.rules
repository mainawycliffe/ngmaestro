rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Saved results collection - public read and write
    match /savedResults/{resultId} {
      // Allow anyone to read saved results
      allow read: if true;
      
      // Allow anyone to create new results
      allow create: if request.resource.data.keys().hasAll(['slug', 'query', 'angularVersion', 'mode', 'response', 'createdAt', 'viewCount', 'isPublic'])
                    && request.resource.data.viewCount == 0
                    && request.resource.data.isPublic == true;
      
      // Allow updates only to increment viewCount (server-side only via increment())
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount'])
                    && request.resource.data.viewCount == resource.data.viewCount + 1;
      
      // Deny delete operations
      allow delete: if false;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
